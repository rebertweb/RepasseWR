<section class="relative min-h-screen flex items-center justify-center bg-black overflow-hidden">
    <!-- Subtle top badge -->
    <div class="absolute top-8 left-1/2 transform -translate-x-1/2 z-20">
        <div class="px-6 py-2 bg-gray-900 border border-gray-800 rounded-full">
            <span class="text-xs text-gray-500 uppercase tracking-wider">Arquitetura de Sistemas Críticos</span>
        </div>
    </div>

    <!-- Subtle golden line accent -->
    <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-yellow-600/30 to-transparent"></div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="max-w-5xl mx-auto text-center">
            <!-- Main headline - Editorial style -->
            <h1 class="text-6xl sm:text-8xl lg:text-9xl font-light leading-none mb-8 tracking-tight">
                <span class="block text-white">com</span>
                <span class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-purple-400 to-blue-500" style="font-weight: 300;">
                    Walentim
                </span>
            </h1>

            <!-- Subtitle - Clean and direct -->
            <p class="text-2xl sm:text-3xl text-gray-400 mb-16 font-light max-w-3xl mx-auto leading-relaxed">
                IA para crescimento autônomo — construída com os mesmos princípios de sistemas governamentais.
            </p>

            <!-- Single CTA -->
            <a href="#contato" class="inline-flex items-center gap-3 px-8 py-4 bg-blue-600 text-white text-lg font-medium rounded-full hover:bg-blue-700 transition-colors duration-300">
                <span>Agendar Sessão</span>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </a>
        </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2">
        <div class="w-px h-16 bg-gradient-to-b from-gray-700 to-transparent"></div>
    </div>
</section>

